<div class="container-sm">

    <nav class="navbar navbar-light bg-light p-1 mb-1">
        <h4><i class="fa-solid fa-user-tie"></i> Cadastrar Candidato</h4>
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <a href="/candidato/{{eleicao.id}}" class="btn btn-outline-secondary btn-sm m-1">
                    <i class="fa-solid fa-chevron-left"></i> Voltar
                </a>
            </li>
        </ul>
    </nav>

    <div class="card">
        <div class="card-body">
            <form action="/candidato/cadastrar" method="post">
                <div class="row my-3">
                    <input value="{{eleicao.id}}" name="eleicao_id" hidden="hidden">
                    <label for="responsavel">RESPONSÁVEL</label>
                    <select id="responsavel" name="responsavel" required class="form-select">
                        {{#each eleitores}}
                            <option value="{{this.id}}">{{this.nome}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="row my-3">
                    <div class="col-9">
                        <label for="descricao">DESCRIÇÃO</label>
                        <input type="text" name="descricao" id="descricao" class="form-control" required>
                    </div>
                    <div class="col-3">
                        <label for="numero">NÚMERO</label>
                        <input type="text" name="numero" id="numero" class="form-control" required>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button class="btn btn-success" type="submit"><i class="fa-solid fa-floppy-disk"></i> Salvar</button>
                </div>
            </form>
        </div>
    </div>

</div>