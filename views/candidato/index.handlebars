<div class="container-sm">
    <nav class="navbar navbar-light bg-light p-1">
        <h4><i class="fa-solid fa-user-tie"></i> Candidatos - Eleição: {{eleicao.descricao}}</h4>
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <a href="/candidato/cadastrar/{{eleicao.id}}" class="btn btn-outline-success btn-sm m-1">
                    <i class="fa-solid fa-plus"></i> Novo
                </a>
                <a href="/eleicao" class="btn btn-outline-secondary btn-sm m-1">
                    <i class="fa-solid fa-chevron-left"></i> Voltar
                </a>
            </li>
        </ul>
    </nav>
    <table class="table table-striped">
        <tr>
            <th>DESCRIÇÃO</th>
            <th>NÚMERO</th>
            <th>STATUS</th>
            <th>RESPONSÁVEL</th>
            <th></th>
        </tr>
        {{#each candidatos}}
            <tr>
                <td>{{descricao}}</td>
                <td>{{numero}}</td>
                <td>{{statusCandidato status}}</td>
                <td>{{eleitore.nome}}</td>
                <td></td>
            </tr>
        {{/each}}
    </table>
</div>