<div class="container-sm-fluid">
    {{json comprovante}}
    <div class="row m-0 p-2">
        <div class="col-2 p-2 bg-body-secondary">
            <img src="/img/perfil.png" class="w-50 d-block mx-auto rounded rounded-circle">
            <h5 class="text-center">{{usuario.eleitor.nome}}</h5>
            <h5 class="text-center">{{categoriaUsuario usuario.categoria}}</h5>
        </div>
        <div class="col-10">
            <nav class="navbar navbar-light bg-light">
                <h4>Bem Vindo ao Sistema</h4>

                    <ul class="nav justify-content-end">
                        {{#if (igual usuario.categoria 1)}}
                        <li class="nav-item">
                            <a href="/eleicao" class="btn btn-outline-success btn-sm m-1">
                                <i class="fas fa-folder"></i>  Eleições
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/eleitor" class="btn btn-outline-success btn-sm m-1">
                                <i class="fa-solid fa-user-tag"></i>  Eleitores
                            </a>
                        </li>
                        {{/if}}
                    </ul>

            </nav>
            <p class="text-end">Desenvolvido por Bruno Vicente</p>
            {{#if eleicoes}}
                <h3>Eleições Disponíveis</h3>
                <table class="table table-striped w-50">
                    {{#each eleicoes}}
                        <tr>
                            <td><h5>{{descricao}}</h5></td>
                        <td>
                            <a href="/urna/{{id}}" class="btn btn-primary"><i class="fa-solid fa-check-to-slot"></i> Votar</a>
                        </td>
                        </tr>
                    {{/each}}
                </table>
            {{/if}}


        </div>
    </div>
</div>