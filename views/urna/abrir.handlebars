<div class="container-sm">
    <nav class="navbar navbar-light bg-light p-1">
        <h4><i class="fa-solid fa-check-to-slot"></i> {{urna.descricao}} - Eleição: {{urna.eleicao.descricao}}</h4>
        <ul class="nav justify-content-end">
            {{#if (igual urna.status 1)}}
                <li class="nav-item">
                    <a href="/urna/apurar/{{urna.id}}" class="btn btn-outline-primary btn-sm m-1">
                        <i class="fa-solid fa-file-signature"></i> Apurar
                    </a>
                </li>
            {{/if}}

            <li class="nav-item">
                <a href="/urna/{{urna.eleicao.id}}" class="btn btn-outline-secondary btn-sm m-1">
                    <i class="fa-solid fa-chevron-left"></i> Voltar
                </a>
            </li>
        </ul>
    </nav>

    <table class="table table-striped">
        {{#each votos}}
            <tr>
                <td>
                    {{candidato.descricao}}
                </td>
            </tr>
        {{/each}}
    </table>

</div>