<div class="container-sm">
    <nav class="navbar navbar-light bg-light p-1">
        <h4><i class="fa-solid fa-check-to-slot"></i> Votação: Eleição: {{eleicao.descricao}}</h4>
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <a href="/eleicao" class="btn btn-outline-secondary btn-sm m-1">
                    <i class="fa-solid fa-chevron-left"></i> Voltar
                </a>
            </li>
        </ul>
    </nav>
    <div class="card w-25 mx-auto mt-2">
        <h4 class="text-center my-2">Cédula de Votação</h4>
        <div class="card-body">
            <form action="/voto/votar" method="post">
                <input type="number" value="{{urna.id}}" name="urna" hidden="hidden">
                <input type="number" value="{{eleicao.id}}" name="eleicao" hidden="hidden">
                {{#each candidatos}}
                    <div class="form-check my-3">
                        <input class="form-check-input" type="radio" value="{{id}}" name="candidato">
                        <label class="form-check-label" for="flexRadioDefault1">
                            {{descricao}}
                        </label>
                    </div>
                {{/each}}
                <div class="form-check my-3">
                    <input class="form-check-input" type="radio" value="0" name="candidato">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Em Branco
                    </label>
                </div>
                <div class="w-25">
                    <button type="submit" class="btn btn-primary">Depositar</button>
                </div>
            </form>
        </div>
    </div>
</div>
